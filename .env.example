# ===========================================
# Environment Variables for Nabat Application
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials to version control!

# ===========================================
# PRODUCTION DATABASE
# ===========================================
POSTGRES_DB=nabat_db
POSTGRES_USER=nabat_user
# REQUIRED: Set a strong password (min 16 characters)
POSTGRES_PASSWORD=

# ===========================================
# DEVELOPMENT DATABASE (docker-compose.dev.yml)
# ===========================================
DEV_POSTGRES_DB=nabat_db_dev
DEV_POSTGRES_USER=dev_user
DEV_POSTGRES_PASSWORD=dev_password

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# REQUIRED: Generate a secure secret (min 256 bits / 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=

# Token expiration times (in milliseconds)
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ===========================================
# SPRING CONFIGURATION
# ===========================================
# Options: dev, prod
SPRING_PROFILES_ACTIVE=prod

